import java.io.*;
import java.util.*;

class Room {
    String category;
    double price;
    boolean isAvailable;

    Room(String category, double price, boolean isAvailable) {
        this.category = category;
        this.price = price;
        this.isAvailable = isAvailable;
    }
}

class Booking {
    String customerName;
    String roomCategory;
    int nights;
    double totalCost;

    Booking(String customerName, String roomCategory, int nights, double totalCost) {
        this.customerName = customerName;
        this.roomCategory = roomCategory;
        this.nights = nights;
        this.totalCost = totalCost;
    }

    @Override
    public String toString() {
        return "Customer: " + customerName +
               ", Room: " + roomCategory +
               ", Nights: " + nights +
               ", Total: $" + totalCost;
    }
}

public class HotelReservationSystem {
    static Scanner sc = new Scanner(System.in);
    static ArrayList<Room> rooms = new ArrayList<>();
    static ArrayList<Booking> bookings = new ArrayList<>();
    static final String FILE_NAME = "bookings.txt";

    public static void main(String[] args) {
        initializeRooms();
        loadBookingsFromFile();

        int choice;
        do {
            System.out.println("\n===== HOTEL RESERVATION SYSTEM =====");
            System.out.println("1. View Available Rooms");
            System.out.println("2. Make a Booking");
            System.out.println("3. View Bookings");
            System.out.println("4. Cancel Booking");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");
            choice = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (choice) {
                case 1 -> viewRooms();
                case 2 -> makeBooking();
                case 3 -> viewBookings();
                case 4 -> cancelBooking();
                case 5 -> saveBookingsToFile();
                default -> System.out.println("Invalid choice! Try again.");
            }
        } while (choice != 5);

        System.out.println("‚úÖ Thank you for using the Hotel Reservation System!");
    }

    // Initialize room types
    static void initializeRooms() {
        rooms.add(new Room("Standard", 1000, true));
        rooms.add(new Room("Deluxe", 2000, true));
        rooms.add(new Room("Suite", 3500, true));
    }

    // View room categories
    static void viewRooms() {
        System.out.println("\nAvailable Rooms:");
        for (Room room : rooms) {
            System.out.println(room.category + " - ‚Çπ" + room.price + " per night" +
                               (room.isAvailable ? " [Available]" : " [Booked]"));
        }
    }

    // Make booking
    static void makeBooking() {
        System.out.print("\nEnter your name: ");
        String name = sc.nextLine();

        System.out.println("Choose room type: Standard / Deluxe / Suite");
        String category = sc.nextLine();

        Room selectedRoom = null;
        for (Room room : rooms) {
            if (room.category.equalsIgnoreCase(category) && room.isAvailable) {
                selectedRoom = room;
                break;
            }
        }

        if (selectedRoom == null) {
            System.out.println("‚ùå Room not available or invalid category!");
            return;
        }

        System.out.print("Enter number of nights: ");
        int nights = sc.nextInt();
        sc.nextLine();

        double totalCost = selectedRoom.price * nights;
        System.out.println("üí≥ Simulating payment of ‚Çπ" + totalCost + " ... Payment Successful!");

        Booking booking = new Booking(name, selectedRoom.category, nights, totalCost);
        bookings.add(booking);
        selectedRoom.isAvailable = false;

        System.out.println("‚úÖ Booking confirmed for " + name);
    }

    // View all bookings
    static void viewBookings() {
        if (bookings.isEmpty()) {
            System.out.println("No bookings found!");
        } else {
            System.out.println("\n===== Current Bookings =====");
            for (Booking b : bookings) {
                System.out.println(b);
            }
        }
    }

    // Cancel a booking
    static void cancelBooking() {
        System.out.print("Enter your name to cancel booking: ");
        String name = sc.nextLine();

        Booking toRemove = null;
        for (Booking b : bookings) {
            if (b.customerName.equalsIgnoreCase(name)) {
                toRemove = b;
                break;
            }
        }

        if (toRemove != null) {
            bookings.remove(toRemove);
            for (Room room : rooms) {
                if (room.category.equalsIgnoreCase(toRemove.roomCategory)) {
                    room.isAvailable = true;
                }
            }
            System.out.println("‚úÖ Booking cancelled successfully!");
        } else {
            System.out.println("‚ùå No booking found for " + name);
        }
    }

    // Save bookings to file
    static void saveBookingsToFile() {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter(FILE_NAME))) {
            for (Booking b : bookings) {
                writer.write(b.customerName + "," + b.roomCategory + "," + b.nights + "," + b.totalCost);
                writer.newLine();
            }
            System.out.println("üíæ Bookings saved to file successfully!");
        } catch (IOException e) {
            System.out.println("‚ùå Error saving file: " + e.getMessage());
        }
    }

    // Load previous bookings from file
    static void loadBookingsFromFile() {
        File file = new File(FILE_NAME);
        if (!file.exists()) return;

        try (BufferedReader reader = new BufferedReader(new FileReader(file))) {
            String line;
            while ((line = reader.readLine()) != null) {
                String[] data = line.split(",");
                bookings.add(new Booking(data[0], data[1], Integer.parseInt(data[2]), Double.parseDouble(data[3])));

                for (Room room : rooms) {
                    if (room.category.equalsIgnoreCase(data[1])) {
                        room.isAvailable = false;
                    }
                }
            }
            System.out.println("üìÇ Bookings loaded from file.");
        } catch (IOException e) {
            System.out.println("‚ùå Error reading file: " + e.getMessage());
        }
    }
}
